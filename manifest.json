{
    "name": "Shopify Dark Mode Code Editor",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["https://*.myshopify.com/admin/themes/*", "https://*.myshopify.com/admin/themes?channel=true"],
            "js": ["content.js"]
        }
    ],
    "browser_action": { 
        "default_popup": "popup.html",
        "default_title": "Shopify Dark Mode code editor",
        "default_icon": "shopify-dark-mode-code-editor.png"
    },
    "permissions": [
        "storage"
      ],
    "icons": { 
        "16": "shopify-dark-mode-code-editor.png",
        "48": "shopify-dark-mode-code-editor.png",
        "128": "shopify-dark-mode-code-editor.png" 
    }
}